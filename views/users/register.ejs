<% layout('layouts/boilerplate')%>
    <h1 class="text-center">Register</h1>
    <form action="/register" method="POST" class="needs-validation" novalidate>
        <div class="mb-3 col-sm-6 mx-auto">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
        </div>
        <div class="mb-3 col-sm-6 mx-auto">
            <label class="form-label" for="email">Email</label>
            <input class="form-control" type="email" id="email" name="email" required>
        </div>
        <div class="mb-3 col-sm-6 mx-auto">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <div class="w-100 text-center">
            <button class="btn" style="background-color: rgb(101, 253, 182);">Register</button>
        </div>
        <div class="w-100 text-center py-3">
            <a class="btn" style="background-color: rgb(255, 92, 127); font-weight: 500;" href="/login">Already
                registered? Login here</a>
        </div>
    </form>